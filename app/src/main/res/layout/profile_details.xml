<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rlImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivUserBackground"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/ivProfileImage"
            style="@style/UserThumbnail"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:layout_height="60dp"
            android:layout_width="60dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTextDetails"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlImages"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            style="@style/NameStyle"
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="newtonry"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/tvUserScreenName"
            style="@style/SmallGrayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:text="newtonry"
            android:layout_alignLeft="@id/tvUserName"
            />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/SmallGrayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserScreenName"
            android:text="Developer at Hearsay Social!"
            android:layout_alignStart="@+id/ivUserImage"
            android:layout_alignLeft="@+id/tvUserName"
            android:textColor="@color/twitterBlack"
            />

        <ImageView
            android:id="@+id/ivLinkIcon"
            style="@style/SmallGrayText"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tvDescription"
            android:layout_alignLeft="@+id/tvUserName"
            android:src="@drawable/ic_link_black_48dp"
            android:tint="@color/twitterLightGray"
            />
        <TextView
            android:id="@+id/tvLink"
            style="@style/SmallGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivLinkIcon"
            android:text="fadetoproductions.com"
            android:layout_alignTop="@+id/ivLinkIcon"
            android:layout_alignBottom="@id/ivLinkIcon"
            android:autoLink="all"
            android:linksClickable="true"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/rlFollowDetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:background="@color/twitterWhite"
        android:layout_below="@+id/rlTextDetails"
        android:layout_marginLeft="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="@color/twitterBlack"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:id="@+id/tvFollowingCount"
            />
        <TextView
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/following_caps"
            android:textColor="@color/twitterLightGray"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/tvFollowingCount"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvFollowing"
            />

        <TextView
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="@color/twitterBlack"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tvFollowing"
            android:id="@+id/tvFollowersCount"
            />

        <TextView
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/followers_caps"
            android:textColor="@color/twitterLightGray"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/tvFollowersCount"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvFollowers"
            />
    </RelativeLayout>
</RelativeLayout>