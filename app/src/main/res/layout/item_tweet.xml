<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/basic_bottom_border"
    >


    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_repeat_black_48dp"
        android:tint="@color/twitterLightGray"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ivProfileImage"
        android:id="@+id/ivRetweetedStatus"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        />

    <TextView
        style="@style/SmallGrayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivRetweetedStatus"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignParentRight="true"
        android:text="Some name Retweeted"
        android:id="@+id/tvNameRetweeted"
        android:visibility="gone"
        />

    <ImageView
        style="@style/UserThumbnail"
        android:layout_below="@+id/ivRetweetedStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ivProfileImage"
        />

    <TextView
        style="@style/NameStyle"
        android:text="Philip Bloom"
        android:id="@+id/tvName"
        android:layout_alignTop="@id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_marginLeft="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guy comes to my door selling magazines. I told him we are in a digital world. He persists."
        android:id="@+id/tvBody"
        android:layout_alignLeft="@id/tvName"
        android:layout_below="@id/tvName"
        android:layout_alignParentRight="true"
        android:textColor="@color/twitterBlack"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:lineSpacingExtra="3dp"
        android:textSize="12sp"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColorLink="@color/twitterPrimaryBlue"
        />

    <TextView
        style="@style/SmallGrayText"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\@PhilipBloom"
        android:id="@+id/tvUserName"
        android:layout_toRightOf="@id/tvName"
        android:layout_alignBottom="@id/tvName"
        android:layout_alignTop="@id/tvName"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <TextView
        style="@style/SmallGrayText"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3h"
        android:id="@+id/tvTime"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_alignBottom="@id/tvUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/tvBody"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_alignParentRight="true"
        android:id="@+id/ivMediaImage"
        android:scaleType="centerInside"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ivMediaImage"
        android:layout_toRightOf="@id/ivProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        >
        <ImageButton
            style="@style/ListViewActionItems"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_reply_black_48dp"
            android:id="@+id/btnReply"
            android:layout_marginRight="25dp"
            />
        <ImageButton
            style="@style/ListViewActionItems"
            android:layout_alignTop="@id/btnReply"
            android:layout_alignBottom="@id/btnReply"
            android:src="@drawable/ic_repeat_black_48dp"
            android:id="@+id/btnRetweet"
            android:layout_toRightOf="@id/btnReply"
            android:layout_marginRight="25dp"
            />
        <ImageButton
            style="@style/ListViewActionItems"
            android:layout_alignTop="@id/btnReply"
            android:layout_alignBottom="@id/btnReply"
            android:src="@drawable/ic_favorite_black_48dp"
            android:id="@+id/btnFavorite"
            android:layout_toRightOf="@id/btnRetweet"
            android:layout_marginRight="25dp"
            />
        <ImageButton
            style="@style/ListViewActionItems"
            android:layout_alignTop="@id/btnReply"
            android:layout_alignBottom="@id/btnReply"
            android:src="@drawable/ic_message_black_48dp"
            android:id="@+id/btnMessage"
            android:layout_toRightOf="@id/btnFavorite"
            />
    </RelativeLayout>
</RelativeLayout>