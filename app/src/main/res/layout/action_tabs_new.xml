<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/basic_top_border"
    >
    <ImageButton
        style="@style/ActionTabItems"
        android:id="@+id/ibHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_home_black_48dp"
        />

    <ImageButton
        style="@style/ActionTabItems"
        android:id="@+id/ibNotifications"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ibHome"
        android:src="@drawable/ic_notifications_black_48dp"
        />
    <ImageButton
        style="@style/ActionTabItems"
        android:id="@+id/ibMessages"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ibNotifications"
        android:src="@drawable/ic_message_black_48dp"
        />
    <ImageButton
        style="@style/ActionTabItems"
        android:id="@+id/ibMe"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ibMessages"
        android:src="@drawable/ic_person_black_48dp"
        />
</RelativeLayout>