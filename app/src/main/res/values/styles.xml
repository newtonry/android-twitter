<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SmallGrayText">
        <item name="android:textColor">@color/twitterLightGray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EnabledButton">
        <item name="android:textColor">@color/twitterWhite</item>
        <item name="android:background">@color/twitterPrimaryBlue</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="DisabledButton">
        <item name="android:textColor">@color/twitterLightGray</item>
        <item name="android:background">@color/twitterWhite</item>
        <item name="android:enabled">false</item>
    </style>
</resources>
